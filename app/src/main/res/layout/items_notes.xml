<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#707070"
        android:layout_margin="10dp">

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/viewpriority"
            android:background="@drawable/red_dot"
            android:layout_gravity="right"
            android:layout_margin="10dp">
        </View>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:id="@+id/notestitle"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:maxLines="1"
                android:fontFamily="@font/bold">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notessubtitle"
                android:text="dfnldjfhljdafh oufohgdpof ihgv lidfhvlidsfhb oidsfhb odhfvl hdsfihbmo dhoidfhb osdhbmidsfhbi;hc;bhf;ibhbpoifg j;lifsjbli;jgl;bfhlcvh"
                android:textColor="#C6C6C6"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/regular">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="23 March 2022"
                android:id="@+id/notesdate"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:fontFamily="@font/bold">
            </TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>